<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCED65"
    app:labelVisibilityMode="auto"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_film_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="handlerClickFilmFragment"
        android:text="Nonton Film"
        android:textStyle="bold"
        android:background="#A691EBF7"
        app:layout_constraintBottom_toTopOf="@+id/btn_static_fragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_drama_fragment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="handlerClickDramaFragment"
        android:text="Nonton Drama"
        android:textStyle="bold"
        android:background="#A691EBF7"
        app:layout_constraintBottom_toTopOf="@+id/btn_static_fragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.813"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_static_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:onClick="handlerClickRateFragment"
        android:text="Lihat Details"
        android:textStyle="bold"
        android:background="#A691EBF7"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/nonton" />

</androidx.constraintlayout.widget.ConstraintLayout>